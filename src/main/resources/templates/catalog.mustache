<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="/static/css/main.css">
        <link rel="icon" href="/static/img/favicon.svg" type="image/x-icon">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Car Parts Store - {{catalogName}}</title>
    </head>
    <body>
    {{>partials/header}}
    {{>partials/user-bar}}




    <div class="product-list">
        {{#products}}
            <div>
                {{#product}}
                    <form method="post" action="/cart/add-to-cart?p={{UUID}}">
                    {{#productInfo}}
                        <a href="/catalog/{{catalogUUID}}/product/{{UUID}}"><h2>{{productName}}</h2></a>
                        <img src="{{imgSource}}" width="100px" height="100px" alt="{{productName}}">
                        <p>Price: ${{priceInPennies}}</p>
                        <label for="quantity">Quantity:</label>
                        <input type="number" id="quantity" name="quantity" min="1" max="10" value="1">
                        <input type="hidden" id="price" name="price" value="{{priceInPennies}}">
                    {{/productInfo}}
                    <input type="hidden" name="uuid" value="{{UUID}}">
                    {{#isUserAuthorized}}
                        {{#isInCart}}
                            <a href="/cart"><button type="button">Add to Cart</button></a>
                        {{/isInCart}}
                        {{^isInCart}}
                            <button type="submit">Add to Cart</button>
                        {{/isInCart}}
                    {{/isUserAuthorized}}
                    {{^isUserAuthorized}}
                        <button type="submit" disabled><a href="/login">Log in</a> to add product in cart</button>
                    {{/isUserAuthorized}}
                    </form>
                {{/product}}
            </div>
        {{/products}}
    </div>
    {{>partials/footer}}
    </body>
</html>
